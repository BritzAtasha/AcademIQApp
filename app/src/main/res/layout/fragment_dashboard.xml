<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hero Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:paddingStart="20dp"
            android:paddingTop="40dp"
            android:paddingEnd="20dp"
            android:paddingBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="Welcome back,"
                    android:textColor="#E0FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDashboardUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.01"
                    android:text="Student"
                    android:textColor="@android:color/white"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.02"
                    android:text="Let's continue your learning journey"
                    android:textColor="#D0FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Stats Cards with Floating Effect -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="32dp">

            <!-- GWA Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_card_purple"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tvGWA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.9"
                            android:textSize="44sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.01"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GWA"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.03"
                            android:textColor="@android:color/white"
                            android:alpha="0.85"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Units Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_card_green"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tvUnits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textSize="44sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.01"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Units"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.03"
                            android:textColor="@android:color/white"
                            android:alpha="0.85"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Balance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_card_green"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚±250"
                            android:textSize="44sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.01"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.03"
                            android:textColor="@android:color/white"
                            android:alpha="0.85"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_card_purple"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tvAttendance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98%"
                            android:textSize="44sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.01"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.03"
                            android:textColor="@android:color/white"
                            android:alpha="0.85"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Instructors Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructors"
                android:textSize="22sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.01"
                android:textColor="#1A1A2E"
                android:layout_marginBottom="20dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Instructor 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="8dp"
                            android:layout_marginBottom="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivInstructor1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_person"
                                    android:scaleType="centerCrop"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/instructor_border_orange"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Smith"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A2E"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <!-- Instructor 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="8dp"
                            android:layout_marginBottom="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivInstructor2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_person"
                                    android:scaleType="centerCrop"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/instructor_border_orange"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prof. Johnson"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A2E"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <!-- Instructor 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="8dp"
                            android:layout_marginBottom="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivInstructor3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_person"
                                    android:scaleType="centerCrop"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/instructor_border_orange"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Williams"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A2E"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <!-- Instructor 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="8dp"
                            android:layout_marginBottom="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivInstructor4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_person"
                                    android:scaleType="centerCrop"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/instructor_border_orange"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prof. Davis"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1A1A2E"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/instructor_border_orange" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Today's Schedule Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Schedule"
                android:textSize="22sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.01"
                android:textColor="#1A1A2E"
                android:layout_marginBottom="20dp"/>

            <!-- Schedule Item 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@id/ivScheduleArrow1"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvSchedule1Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IT104"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvSchedule1Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:00AM - 10:00AM"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#6B7280"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivScheduleArrow1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#1A1A2E"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Schedule Item 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@id/ivScheduleArrow2"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvSchedule2Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CC106"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvSchedule2Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00AM - 12:00PM"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#6B7280"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivScheduleArrow2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#1A1A2E"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Schedule Item 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@id/ivScheduleArrow3"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvSchedule3Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MATH201"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvSchedule3Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1:00PM - 3:00PM"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#6B7280"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivScheduleArrow3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#1A1A2E"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>