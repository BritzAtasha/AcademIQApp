<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/circle_white">

        <!-- Course info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGradeCourseCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CC106"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGradeCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGradeUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units: 3.0"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Grade value -->
        <TextView
            android:id="@+id/tvGradeValue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A+"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/gradient_button_secondary"
            android:gravity="center"/>

        <!-- Admin actions (Edit/Delete) -->
        <LinearLayout
            android:id="@+id/llAdminActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnEditGrade"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textSize="10sp"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="@color/purple_primary"
                android:textColor="@color/purple_primary"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/btnDeleteGrade"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textSize="10sp"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="@color/purple_primary"
                android:textColor="@color/purple_primary"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
