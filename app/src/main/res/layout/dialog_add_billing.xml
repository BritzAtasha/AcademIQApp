<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="28dp"
    android:background="@drawable/circle_white">

    <!-- Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F0FF">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_billing"
                app:tint="@color/purple_primary"
                android:contentDescription="@string/billing_icon"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvDialogBillingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Billing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:letterSpacing="-0.01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add billing subtitle"
                android:textSize="14sp"
                android:textColor="@color/primary_dark"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Category Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDialogBillingCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/category_hint"
        android:textColorHint="@color/purple_light"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/purple_primary"
        app:hintTextColor="@color/purple_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogBillingCategory"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/primary_light"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDialogBillingAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/amount_hint"
        android:textColorHint="@color/purple_light"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/purple_primary"
        app:hintTextColor="@color/purple_primary"
        app:prefixText="â‚± "
        app:prefixTextColor="@color/text_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogBillingAmount"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:textColor="@color/primary_light"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Status Input (Changed to AutoCompleteTextView) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDialogBillingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/status_hint"
        android:textColorHint="@color/purple_light"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/purple_primary"
        app:hintTextColor="@color/purple_primary"
        app:endIconMode="dropdown_menu"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/etDialogBillingStatus"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="none"
            android:textSize="16sp"
            android:textColor="@color/primary_light"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Due Date Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDialogBillingDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:hint="@string/due_date_hint"
        android:textColorHint="@color/purple_light"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/purple_primary"
        app:hintTextColor="@color/purple_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogBillingDueDate"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/primary_light"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBillingCancel"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/purple_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:cornerRadius="12dp"
            app:strokeColor="@color/purple_primary"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBillingSave"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:background="@drawable/button_gradient"
            app:cornerRadius="12dp"
            app:elevation="2dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>
