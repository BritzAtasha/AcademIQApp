<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="NavigationDrawerTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavigationDrawerStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/nav_item_background</item>
        <item name="itemIconTint">@color/nav_icon_tint</item>
        <item name="itemTextColor">@color/nav_text_color</item>
        <item name="itemShapeFillColor">@android:color/transparent</item>
        <item name="itemShapeInsetStart">8dp</item>
        <item name="itemShapeInsetEnd">16dp</item>
        <item name="itemShapeInsetTop">4dp</item>
        <item name="itemShapeInsetBottom">4dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearance">@style/NavigationDrawerTextStyle</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>

